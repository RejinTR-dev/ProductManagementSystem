@* @model LoginApp.Models.LoginViewModel *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

            .login-container h2 {
                margin-bottom: 20px;
                font-size: 24px;
                color: #333;
            }

            .login-container label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .login-container input {
                width: 100%;
                padding: 8px;
                margin-bottom: 15px;
                border: 1px solid #ccc;
                border-radius: 3px;
                box-sizing: border-box;
            }

            .login-container button {
                width: 100%;
                padding: 10px;
                background-color: #28a745;
                color: #fff;
                border: none;
                border-radius: 3px;
                font-size: 16px;
                cursor: pointer;
            }

                .login-container button:hover {
                    background-color: #218838;
                }

        .error-message {
            color: red;
            margin-bottom: 15px;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <label asp-for="Username">User Name</label>
            <input asp-for="Username" id="username" /><br><br>
            <label asp-for="Password">Password</label>
            <input asp-for="Password" id="password" type="password" /><br><br>
            <button type="submit" id="loginButton">Login</button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
            <p class="error-message">@ViewBag.ErrorMessage</p>
        }
    </div>
</body>
</html>
<input type="hidden" id="loginUrl" value="@Url.Action("LoginUser", "Home")" />
<input type="hidden" id="addProductUrl" value="@Url.Action("AddProduct", "Home")" />
<script>
    $(document).ready(function () {
        $('#loginButton').click(function (e) {
            debugger;
            e.preventDefault();
            e.stopImmediatePropagation();

            var username = $('#username').val();
            var password = $('#password').val();

            $.ajax({
                url: $('#loginUrl').val(),
                type: 'POST',
                data: {
                    username: username,
                    password: password
                },
                success: function (response) {
                    debugger;
                    if (response.token != null && response.token!="") {
                        localStorage.setItem('jwtToken', response.token);
                        var asb = $('#addProductUrl').val()+"?val=1";
                        window.location.href = $('#addProductUrl').val();
                        //response.redirect($('#addProductUrl').val());
                    }
                    else {
                        alert('Login failed. Please check your username and password.');
                    }
                    console.log('Login successful:', response);
                },
                error: function (error) {
                   // console.error('Error:', error);
                    alert('Login failed. Please check your username and password.');
                }
            });
        });
    });

</script>
